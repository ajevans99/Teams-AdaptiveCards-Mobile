{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.2",
    "body": [
        {
           "type": "Input.Number",
           "id": "number",
           "placeholder": "Enter a number",
           "label": "Enter a number",
           "min": 1,
           "max": 10,
           "value": 3,
          "isRequired":true
        },
        {
            "type": "TextBlock",
            "text": "Default text input"
        },
        {
            "type": "Input.Text",
            "id": "defaultInputId",
            "placeholder": "enter comment",
            "maxLength": 500,
            "isRequired":true
        },
        {
            "type": "Input.Toggle",
            "id": "acceptTerms",
            "title": "I accept the terms and agreements",
            "value": "true",
            "valueOn": "true",
            "valueOff": "false",
            "label": "Please check the box below to accept the terms and agreements:",
            "errorMessage": "You must accept the terms to continue.",
            "isRequired":true
        },
        {
             "type": "TextBlock",
             "text": "Date Input"
        },
        {
             "type": "Input.Date",
             "id": "date",
             "placeholder": "Enter a date",
             "value": "2017-10-12",
             "isRequired":true
        },
        {
             "type": "Input.Time",
             "label": "What time do you want to meet?",
             "id": "time",
             "min": "09:00",
             "max": "17:00",
             "value": "15:30",
             "isRequired":true
          },
        {
           "type": "Input.ChoiceSet",
           "id": "myColor",
           "style": "compact",
           "label": "What color do you want? (isMultiSelect:false, style:compact)",
           "isMultiSelect": false,
           "value": "1",
           "isRequired":true,
           "choices": [
             {
               "title": "Red",
               "value": "1"
             },
             {
               "title": "Green",
               "value": "2"
             },
             {
               "title": "Blue",
               "value": "3"
             }
           ]
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "OK",
            "conditionallyEnabled":true
        },
        {
            "type": "Action.Submit",
            "title": "Permanently disabled",
            "isEnabled":false
        }
    ]
}

